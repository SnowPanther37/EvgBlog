<style>
.reda{
  display:inline-block;
  margin-right: 10px;
}
.buten{
  display:inline-block;
}
</style>
<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<div class = "reda">
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn btn-warning' %>
</div>
<div class = "buten">
<%= button_to "Удалить", post_path(@post), method: :delete, data: { confirm: "Удалить пост?" }, :class =>  'btn btn-danger' %>
</div>
<hr>
<h1>Все комментарии</h1>
<%= will_paginate @posts %>
<ul class="comment">
<% @post.comments.each do |comment| %>
<div class = 'alert alert-light'>
<p><strong><%= comment.username %></strong>: <%=  comment.body %></p>
<!-- <%= link_to "Редактировать", edit_post_comment_path(@post), :class => 'btn btn-warning' %> -->
</div>
</ul>
<% end  %>
<%= will_paginate %>
<hr>
<h2>Добавление комментария</h2>
<%= form_with model: [@post, @post.comments.build] do |f| %>
<p> 
Пользователь <br>
<%= f.text_field(:username, {:class => 'form-control'}) %>
 </p>
 <p> 
Текст комментария <br>
<%= f.text_area(:body, {:class => 'form-control'}) %>
 </p>
  <p> 
<%= f.submit("Добавить комментарий", {:class => 'btn btn-warning'}) %>
 </p>
 <% end %>
